@model Model.EF.Content
@{
    ViewBag.Title = Model.Name;
    ViewBag.HomeKeywords = Model.MetaKeywords;
    ViewBag.HomeDescriptions = Model.MetaDescriptions;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>@Model.Name</h3>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section">
        @Html.Raw(Model.Detail)       
    </div>
    <br/>
    <div>      
        <ul class="list-inline">
            @{
                var tags = (List<Model.EF.Tag>)ViewBag.Tags;
                foreach (var item in tags)
                {
                    <li class="btn btn-default"><a href="/tag/@item.ID" style="text-decoration:none;">@item.Name</a></li>
                }
            }
        </ul>
    </div>
</div>
